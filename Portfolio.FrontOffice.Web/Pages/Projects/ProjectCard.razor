@using Portfolio.Common.Enums 
@using Portfolio.FrontOffice.Common
@using System.ComponentModel.DataAnnotations 

<div class="card">
    <div class="card-header">
        @(ProjectModel.Category == ProjectCategory.FreeTime ? ProjectModel.Category.GetAttribute<DisplayAttribute>().Name : ProjectModel.EmployerId.ToString())
        <span class="float-right">@ProjectModel.StartDate.ToString("yyyy-MM") - @(ProjectModel.EndDate?.ToString("yyyy-MM") ?? "today")</span>
    </div>
    <div class="card-body">
        <h5 class="card-title">@ProjectModel.Name @(string.IsNullOrEmpty(ProjectModel.Customer) ? $"at {ProjectModel.Customer}" : "")</h5>
        <h6 class="card-subtitle mb-2 text-muted">@ProjectModel.Role</h6>
        <p class="card-text">@ProjectModel.Description</p>
    </div>
    <div class="card-footer">
        @foreach (var tech in ProjectModel.Technologies)
        {
            <Badge>@tech</Badge>
        }
    </div>
</div>

@code {
    [Parameter]
    public ProjectModel ProjectModel { get; set; }
}
